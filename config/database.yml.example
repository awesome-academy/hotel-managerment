default: &default
  adapter: mysql2
  encoding: utf8
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  timeout: 5000
  username: "root"
  password: "root"
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: hotel_managerment_development
test:
  <<: *default
  database: hotel_managerment

production:
  <<: *default
  database: db/production.mysql2
